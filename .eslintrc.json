{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx", "*.json"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              },
              {
                "sourceTag": "scope:dash",
                "onlyDependOnLibsWithTags": ["scope:shared", "scope:dash"]
              },
              {
                "sourceTag": "scope:nx-plugins",
                "onlyDependOnLibsWithTags": ["scope:shared", "scope:nx-plugins"]
              },
              {
                "sourceTag": "type:types",
                "onlyDependOnLibsWithTags": ["type:types"]
              },
              {
                "sourceTag": "type:utils",
                "onlyDependOnLibsWithTags": ["type:types", "type:utils"]
              },
              {
                "sourceTag": "type:data",
                "onlyDependOnLibsWithTags": ["type:types", "type:utils"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:types", "type:utils"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:ui",
                  "type:data",
                  "type:types",
                  "type:utils"
                ]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:ui",
                  "type:data",
                  "type:types",
                  "type:utils",
                  "type:feature"
                ]
              },
              {
                "sourceTag": "type:e2e",
                "onlyDependOnLibsWithTags": [
                  "type:app",
                  "type:storybook",
                  "type:feature",
                  "type:ui",
                  "type:utils",
                  "type:types"
                ]
              },
              {
                "sourceTag": "type:storybook",
                "onlyDependOnLibsWithTags": [
                  "type:app",
                  "type:storybook",
                  "type:feature",
                  "type:ui",
                  "type:utils",
                  "type:data",
                  "type:types"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    },
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nrwl/nx/workspace/allowed-project-tags": [
          "error",
          {
            "scopeTags": ["dash", "nx-plugins", "shared"],
            "typeTags": [
              "app",
              "storybook",
              "e2e",
              "feature",
              "ui",
              "data",
              "utils",
              "types"
            ]
          }
        ]
      }
    }
  ]
}
