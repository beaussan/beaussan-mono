{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "üìå dependencies"
  ],
  "commitMessagePrefix": "‚¨ÜÔ∏è",
  "commitMessageAction": "Upgrade",
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "updateTypes": [
        "pin"
      ],
      "commitMessagePrefix": "üìå",
      "commitMessageAction": "Pin"
    },
    {
      "updateTypes": [
        "rollback"
      ],
      "commitMessagePrefix": "‚¨áÔ∏è",
      "commitMessageAction": "Downgrade"
    },
    {
      "matchPackageNames": [
        "react-hook-form"
      ],
      "matchPackagePatterns": [
        "^@hookform/"
      ],
      "groupName": "React hook form monorepo"
    },
    {
      "matchPackageNames": [
        "urql"
      ],
      "matchPackagePatterns": [
        "^@urql/"
      ],
      "groupName": "Urql monorepo"
    },
    {
      "matchPackagePatterns": [
        "^supertokens.*"
      ],
      "groupName": "supertokens monorepo"
    },
    {
      "matchPackageNames": ["postcss", "nx"],
      "matchPackagePatterns": [
        "@nrwl/.*",
        "@nx/.*",
        ".*babel.*",
        "@rollup/.*",
        "@svgr/.*",
        "@swc/.*"
      ],
      "enabled": false
    }
  ]
}
